#!/usr/bin/env groovy
for (int i = 1; i <= 5; i++) {
    folder("Terraform")

    deliveryPipelineView("Terraform/Pipeline-${i}") {
        pipelineInstances(5)
        allowPipelineStart()
        enableManualTriggers()
        enablePaging()
        linkToConsoleLog()
        showChangeLog()
        showDescription()
        pipelines {
            component("Terraform env pipeline-${i}", "Terraform/Build")
        }
    }

    job("Terraform/Build") {
        deliveryPipelineConfiguration("Build", "Build")
        wrappers {
            deliveryPipelineVersion('1.0.0.\$BUILD_NUMBER', true)
        }
        publishers {
