    job("Terraform/env-dev-plan") {
        deliveryPipelineConfiguration("env-dev-${i}", "Plan")

        wrappers {
            buildName('\$PIPELINE_VERSION')
        }

        steps {
            shell 'sleep 5'
        }

        publishers {
            buildPipelineTrigger("Terraform/env-dev-apply")
        }
    }

    job("Terraform/env-dev-apply") {
        deliveryPipelineConfiguration("env-dev-${i}", "Apply")

        wrappers {
            buildName('\$PIPELINE_VERSION')
        }

        steps {
            shell 'sleep 10'
        }


        publishers {
        downstream("Terraform/env-prod-plan", 'SUCCESS')
        }
    }

    job("Terraform/env-prod-plan") {
