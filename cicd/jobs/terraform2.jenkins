#!/usr/bin/env groovy

pipelineJob('terraform-fp') {
    displayName('Terraform pipelines build - fp')

    logRotator {
        numToKeep(10)
        daysToKeep(30)
    }

    configure { project ->
        project / 'properties' / 'org.jenkinsci.plugins.workflow.job.properties.DurabilityHintJobProperty' {
            hint('PERFORMANCE_OPTIMIZED')
        }
    }

    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url('https://github.com/faisalp4p/jenkins-job-test.git')
                        credentials('jenkins-operator')
                    }
                    branches('*/main')
                }
            }
            scriptPath('cicd/pipelines/terraform2.jenkins')
        }
    }
}